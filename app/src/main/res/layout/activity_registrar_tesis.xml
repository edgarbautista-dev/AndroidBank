<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        tools:context=".RegistrarTesisActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Registrar Tesis"
              android:textSize="24sp"
              android:gravity="center"
              android:textColor="@color/black"
              android:id="@+id/textViewRegistrarTesis"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="29dp" android:layout_marginStart="38dp"/>
    <EditText android:layout_width="411dp" android:layout_height="wrap_content"
              android:hint="Título"
              android:inputType="text"
              android:id="@+id/editTextTitulo"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="93dp"/>
    <EditText android:layout_width="411dp" android:layout_height="wrap_content"
              android:hint="Descripción"
              android:inputType="text"
              android:id="@+id/editTextDescripcion"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
              android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/editTextTitulo"/>
    <EditText android:layout_width="411dp" android:layout_height="wrap_content"
              android:hint="Fecha de inicio"
              android:inputType="date"
              android:id="@+id/editTextFechaInicio"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="19dp"
              app:layout_constraintTop_toBottomOf="@+id/editTextDescripcion"/>
    <EditText android:layout_width="411dp" android:layout_height="wrap_content"
              android:hint="Fecha de fin"
              android:inputType="date"
              android:id="@+id/editTextFechaFin"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="19dp"
              app:layout_constraintTop_toBottomOf="@+id/editTextFechaInicio"/>
    <EditText android:layout_width="411dp" android:layout_height="wrap_content"
              android:hint="Código de la tesis"
              android:inputType="text"
              android:id="@+id/editTextCodigoTesis"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="19dp"
              app:layout_constraintTop_toBottomOf="@+id/editTextFechaFin"/>
    <EditText android:layout_width="411dp" android:layout_height="wrap_content"
              android:hint="Código de la carrera"
              android:inputType="text"
              android:id="@+id/editTextCodigoCarrera"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="19dp"
              app:layout_constraintTop_toBottomOf="@+id/editTextCodigoTesis"/>
    <EditText android:layout_width="411dp" android:layout_height="wrap_content"
              android:hint="Código del estudiante"
              android:inputType="text"
              android:id="@+id/editTextCodigoEstudiante"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="19dp"
              app:layout_constraintTop_toBottomOf="@+id/editTextCodigoCarrera"/>
    <Button   android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Registrar"
              android:id="@+id/buttonRegistrarTesis"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="19dp"
              app:layout_constraintTop_toBottomOf="@+id/editTextCodigoEstudiante"/>
    <TextView android:text=""
              android:id="@+id/textValidacion"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="19dp"
              app:layout_constraintTop_toBottomOf="@+id/buttonRegistrarTesis"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
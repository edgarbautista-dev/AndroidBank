<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TesisActivity">

    <TextView
            android:text="Buscar Tesis"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp" android:layout_marginStart="31dp"
            android:layout_marginBottom="26dp" app:layout_constraintBottom_toTopOf="@+id/txtNombre"/>
    <EditText android:layout_width="0dp" android:layout_height="0dp"
              android:inputType="textPersonName" android:ems="10" android:id="@+id/txtNombre"
              android:hint="Buscar por Nombre"
              app:layout_constraintTop_toBottomOf="@+id/textView"
              android:layout_marginBottom="26dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/txtAutor" app:layout_constraintStart_toStartOf="parent"/>
    <EditText android:layout_width="0dp" android:layout_height="0dp"
              android:minHeight="48dp"
              android:inputType="textPersonName" android:ems="10" android:id="@+id/txtAutor"
              android:hint="Buscar por Autor (Estudiante)"
              app:layout_constraintTop_toBottomOf="@+id/txtNombre"
              android:layout_marginBottom="25dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/txtCodigoTesis" app:layout_constraintStart_toStartOf="parent"/>
    <EditText android:layout_width="0dp" android:layout_height="0dp"
              android:inputType="textPersonName" android:ems="10" android:id="@+id/txtCodigoTesis"
              android:hint="Buscar por codigo de Tesis"
              app:layout_constraintTop_toBottomOf="@+id/txtAutor"
              android:layout_marginBottom="71dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/btnBuscar" app:layout_constraintStart_toStartOf="parent"/>
    <Button android:text="Buscar" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btnBuscar"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigoTesis" android:layout_marginBottom="358dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>